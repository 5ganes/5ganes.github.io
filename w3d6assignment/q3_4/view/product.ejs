<%- include('header.ejs')%>
    <div class="container border">
        <h4 class="title mt-2 mb-2 p-3">
            Product List
            <a href="/cartList" class="btn btn-success float-right">Cart</a>
        </h4>
        <div class="row">
            <% for(let product of productList){ %>
                <div class="col-3 card border m-2 p-2">
                    <div class="card-header text-center">
                        <%=product.name%>
                    </div>
                    <div class="card-body">
                        <p>
                            <%=product.description%>
                        </p>
                        <form action="/addToCart" method="POST">
                            <input type="hidden" name="productId" value="<%=product.id%>">
                            <input class="btn btn-success float-right mt-2" type="submit" name="cart"
                                value="Add to Cart">
                        </form>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
    <%- include('footer.ejs')%>